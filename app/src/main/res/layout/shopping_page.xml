<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/shop_page"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Pantry">

<EditText
    android:id="@+id/shop_input_name"
    android:layout_width="wrap_content"
    android:layout_height="59dp"
    android:layout_below="@+id/shop_text_header"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="20dp"
    android:layout_marginTop="9dp"
    android:layout_marginEnd="18dp"
    android:ems="10"
    android:hint="Enter Item Name" />


<Button
    android:id="@+id/add_btn_shop"
    android:layout_width="377dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/shop_input_name"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="17dp"
    android:layout_marginLeft="19dp"
    android:layout_marginTop="9dp"
    android:layout_marginEnd="17dp"
    android:text="Add" />

<ListView
    android:id="@+id/shop_ingrediate_list"
    android:layout_width="371dp"
    android:layout_height="509dp"
    android:layout_below="@+id/add_btn_shop"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="19dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="19dp" />

<TextView
    android:id="@+id/shop_text_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="0dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="0dp"
    android:fontFamily="sans-serif-black"
    android:text="Your Shopping Page"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    android:textColor="#000000"
    tools:text="Your Shopping Page" />
</RelativeLayout>